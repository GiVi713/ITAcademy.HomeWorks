<Window x:Class="BlackMirror.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackMirror.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    

    <Window.Resources>
        <Style x:Key="BlackAndWhite">
            <Setter Property="Control.FontFamily" Value="comic sans ms" />
            <Setter Property="Control.Background" Value="Black" />
            <Setter Property="Control.Foreground" Value="Gray" />
            <Setter Property="ItemsControl.FontSize" Value="20"/>
            <Setter Property="Control.Margin" Value="10" />
        </Style>

    </Window.Resources>

    <Grid>
        <TextBlock 
            Style="{StaticResource BlackAndWhite}" 
            Text="Введите Login"
            Margin="194,246,456,127">
        </TextBlock>
        <TextBlock
            Style="{StaticResource BlackAndWhite}" 
            Text="Введите пароль" 
            Margin="439,246,184,140">
        </TextBlock>
        <TextBox Margin="450,284,208,103">
        </TextBox>
        <TextBox Margin="194,284,464,103">
        </TextBox>
        
        
    </Grid>
</Window>
