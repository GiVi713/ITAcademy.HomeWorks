<Application x:Class="BlackMirror.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml" xmlns:views="clr-namespace:BlackMirror.View"
             xmlns:vw="clr-namespace:BlackMirror.ViewModel" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Application.Resources>
    <DataTemplate DataType="{x:Type vw:MainViewModel}">
      <views:MainView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vw:RegistrationViewModel}">
      <views:HomeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vw:AccountViewModel}">
      <views:AccountView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vw:UserMenuViewModel}">
      <views:UserMenuView />
    </DataTemplate>
  </Application.Resources>
</Application>